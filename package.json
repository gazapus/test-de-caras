{
  "name": "test-de-caras",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron/electron.js",
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.13",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^1.2.0",
    "formik": "^2.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-loader-spinner": "^3.1.14",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "styled-components": "^5.2.1",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electromon .\""
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "extraMetadata": {
      "main": "build/electron/electron.js"
    },
    "appId": "xyz.testdecaras",
    "win": {
      "target": "nsis",
      "icon": "build/electron/icon.ico"
    },
    "productName": "Test de Caras",
    "buildVersion": "0.1.0",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "copyright": "Copyright © 2020 Cristian Villafañe"
  },
  "devDependencies": {
    "electromon": "^1.0.10",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1"
  }
}
